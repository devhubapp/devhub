{
  "name": "@devhub/desktop",
  "version": "0.40.0",
  "private": false,
  "main": "dist/electron.js",
  "scripts": {
    "build": "yarn clean && yarn compile && pushd ../web && yarn build && popd && yarn build:electron",
    "build:electron": "NODE_ENV=production electron-builder -mw",
    "compile": "tsc -b",
    "clean": "rm -rf build && rm -rf dist",
    "format": "prettier --write '{.,src/**}/*.{js,jsx,ts,tsx}'",
    "lint": "tslint -p .",
    "predeploy": "yarn run build",
    "start": "yarn clean && yarn compile && NODE_ENV=development electron .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.devhubapp",
    "productName": "devhub",
    "extends": null,
    "directories": {
      "app": "../../"
    },
    "extraMetadata": {
      "main": "packages/desktop/dist/electron.js"
    },
    "files": [
      "packages/core/package.json",
      "packages/core/dist/**/*",
      "packages/desktop/dist/**/*",
      "packages/web/dist/**/*",
      "packages/web/public/**/*"
    ],
    "mac": {
      "icon": "assets/media/logo.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/media/logo.ico"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^4.0.0",
    "electron-builder": "^20.38.3",
    "tslint": "^5.11.0",
    "typescript": "^3.2.1",
    "wait-on": "^3.2.0"
  }
}
