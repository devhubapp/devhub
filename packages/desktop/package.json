{
  "name": "@devhub/desktop",
  "version": "0.0.1",
  "private": false,
  "description": "devhub desktop client",
  "main": "dist/main.js",
  "scripts": {
    "start": "rm -rf dist && tsc && electron .",
    "build": "tsc && electron-builder -mw",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "patch": "npm version patch && git push origin master && git push origin --tags",
    "minor": "npm version patch && git push origin master && git push origin --tags",
    "major": "npm version patch && git push origin master && git push origin --tags",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "productName": "devhub",
    "appId": "com.devhubapp.devhub",
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/main.js",
      "public/",
      "node_modules/",
      "package.json"
    ],
    "mac": {
      "icon": "public/static/icns/logo.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "public/static/icns/logo.ico"
    },
    "nsis": {
      "oneClick": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/devhubapp/devhub.git"
  },
  "keywords": [
    "devhub",
    "desktop",
    "electron"
  ],
  "author": "amorist",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devhubapp/devhub/issues"
  },
  "homepage": "https://github.com/devhubapp/devhub#readme",
  "dependencies": {},
  "devDependencies": {
    "electron": "^3.0.12",
    "electron-builder": "^20.38.3",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.1"
  }
}
